
@{
    ViewBag.Title = "Report_Detail";
}


<link href="~/CSS/SearchBox/searchbox.css" rel="stylesheet" />
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
<link rel='stylesheet' href='https://fonts.googleapis.com/css?family=Nunito'>



<style type="text/css">

    .form-rounded {
        border-radius: 3rem;
    }
</style>



<style type="text/css">
    .button_cls {
        background: #1AAB8A;
        color: #fff;
        border: none;
        position: relative;
        height: 25px;
        font-size: 1em;
        padding: 0 2em;
        cursor: pointer;
        transition: 800ms ease all;
        outline: none;
    }

        .button_cls:hover {
            background: #fff;
            color: #1AAB8A;
        }

        .button_cls:before, button:after {
            content: '';
            position: absolute;
            top: 0;
            right: 0;
            height: 2px;
            width: 0;
            background: #1AAB8A;
            transition: 400ms ease all;
        }

        .button_cls:after {
            right: inherit;
            top: inherit;
            left: 0;
            bottom: 0;
        }

        .button_cls:hover:before, button:hover:after {
            width: 100%;
            transition: 800ms ease all;
        }
</style>




<div style=" align-content:center; width:100%" class="card w-100 shadow p-3 mb-5 bg-white rounded">
    <table class=" table-hover table-striped shadow " style="width:100%">

       
        <tr>
            <td colspan="2" style="text-align:center">
                <h3> Stock Report </h3>
            </td>
        </tr>
        <tr>
            <td colspan="2" style="height:20px;">
            </td>
        </tr>
        <tr>
            <td colspan="2">

                @using (Html.BeginForm("Inventary_Report", "Stock_Report", FormMethod.Post))
                {

                    <table style="width:100%;">
                        <tr>
                            <td style="width:30%;">
                                Stock Type
                            </td>
                            <td style="width:70%; text-align:center;">
                                @Html.DropDownList("Item_Type", new List<SelectListItem>
                                                    {
                                                       new SelectListItem{ Text="All", Value = "All" },
                                                       new SelectListItem{ Text="Desktop", Value = "Desktop" },
                                                       new SelectListItem{ Text="Laptop", Value = "Laptop" },
                                                       new SelectListItem{ Text="Monitor", Value = "Monitor" },
                                                       new SelectListItem{ Text="Printer", Value = "Printer" },
                                                       new SelectListItem{ Text="Scanner", Value = "Scanner" },
                                                       new SelectListItem{ Text="Server", Value = "Server" },
                                                       new SelectListItem{ Text="Switch", Value = "Switch" },
                                                       new SelectListItem{ Text="Apple Ipad / Surface Pro", Value = "AppleIpad" },
                                                       new SelectListItem{ Text="Data Card", Value = "DataCard" },
                                                       new SelectListItem{ Text="Other Mislenious Item", Value = "OtherItem" },
                                                       new SelectListItem{ Text="Data Center Mislenious Item", Value = "DC_MisItem" },
                                                       new SelectListItem{ Text="UPS", Value = "Ups" },
                                                    }, new { style = "width:80%", @class = "form-rounded" })
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2" style="height:15px;">
                            </td>
                        </tr>
                        <tr>
                            <td style="width:30%;">
                                Report Type
                            </td>
                            <td style="width: 70%; text-align: center;">

                                @Html.DropDownList("Report_Type", new List<SelectListItem>
                                    {
                                    new SelectListItem{ Text="Pdf Report", Value = "Pdf" },
                                    new SelectListItem{ Text="Excel Report", Value = "Excel" },
                                 }, new { style = "width:80%", @class = "form-rounded" })
                            </td>

                        </tr>
                        <tr>
                            <td colspan="2" style="height:50px;">
                            </td>
                        </tr>

                        <tr style=" height: 50px; ">
                            <td colspan="2">
                                <table style="width:100%;">
                                    <tr>
                                        <td style="width:25%"></td>
                                        <td style="width: 25%; padding-top: 10px; padding-bottom: 5px" align="center">
                                            <button class="button_cls form-rounded">Submit</button>

                                        </td>

                                        <td style="width: 25%; padding-top: 10px; padding-bottom: 5px" align="center">
                                            @Html.ActionLink("Back", "Admin_Dashboard", "Admin_Dashboard", null, new { @class = "button_cls form-rounded", })
                                        </td>
                                        <td style="width:25%"></td>
                                    </tr>
                                </table>
                            </td>


                        </tr>
                    </table>

                }
            </td>

        </tr>

    </table>
</div>


