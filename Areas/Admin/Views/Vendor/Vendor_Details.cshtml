@using IT_Hardware.Areas.Admin.Models

@model IList<Mod_Vendor>

@{
    ViewBag.Title = "Index";
}


<link href="~/CSS/SearchBox/searchbox.css" rel="stylesheet" />
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
<link rel='stylesheet' href='https://fonts.googleapis.com/css?family=Nunito'>


<div style="   text-align: center; height: 50px; align-content: center; width: 100% " class="h-10 w-100 shadow p-1 mb-1 bg-white rounded">

    <p style="font-size:large; font-weight:bold;">List of Vendor</p>

</div>

<div style=" align-content:center; width:100%" class="h-10 w-100 shadow p-1 mb-1 bg-white rounded">
    <table class=" table-hover table-striped shadow " style="width:100%">
        <tr>
            <td width="75%">

                <div class="col-rt-3 equal-height">
                    <div class="sb-example-3">
                        <!-- partial:index.partial.html -->
                        <div class="search__container">

                            <input class="search__input" type="text" placeholder="Search">
                        </div>
                    </div>
                </div>


            </td>
            <td align="right" width="25%">
                <h4>
                    @Html.ActionLink("Add New", "Vendor_Create_Item", "Vendor")

                </h4>
            </td>
        </tr>
        <tr>
            <td colspan="2">
                </br>
            </td>
        </tr>
        <tr>
            <td colspan="2">
                <table style="width:100%">
                    <tr>
                        <th style="width:40%; text-align: left;">
                            Vender Name
                        </th>
                        <th style="width:20%; text-align: right;">
                            PO Amount Issued
                        </th>
                         <th style="width:15%; text-align: right; ">
                            Invoice Processed
                        </th >
                         <th style="width:15%; text-align: right; ">
                            Assets Purchased
                        </th >
                        <th style="width:10%; text-align: center;"> Action </th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td style="width:40%; text-align: left;" >
                                @Html.DisplayFor(modelItem => item.Vendor_name)
                            </td>
                            <td style="width:20%; text-align: right;">
                                 @Html.ActionLink(item.PO_Issued, "PO_Details", "Purchase_Order", new { Vender_Id = item.Vendor_id })
                            </td>
                            <td style="width:15%; text-align: right;">
                                @Html.ActionLink(item.Invoice_Processed, "Admin_Dashboard", "Admin_Dashboard", new { Id = item.Vendor_id , type="Vender" })
                            </td>
                             <td  style="width: 15%; text-align: center; ">
                                 @Html.ActionLink("View", "Item_Issue_Details", "Item_Issue", new { Id = item.Vendor_id , type="Vender" })
                            </td>
                            <td style="width:10%; text-align: center;">
                                @Html.ActionLink("Edit", "Edit_Vendor", new { id = item.Vendor_id }) 
                            </td>
                        </tr>
                    }

                </table>

            </td>

        </tr>

    </table>
</div>

<script type="text/javascript">
    function ShowSuccessMsg() {
        toastr.success("Successfully Added.");
    };
    function ShowFailure(Msg) {
        toastr.error("Error:" + Msg);
    };
</script>
@if (ViewBag.JavaScriptFunction != null)
{
    <script type="text/javascript">
        @Html.Raw(ViewBag.JavaScriptFunction)
    </script>
}



@if (TempData["Message"] != null && TempData["Message"] != "" && TempData["Message"] != string.Empty)
{
    <script type="text/javascript">

    window.onload = function () {

        alert("@TempData["Message"]");

    };
    </script>

}

