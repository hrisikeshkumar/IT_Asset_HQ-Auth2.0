@model IT_Hardware.Areas.Admin.Models.Mod_Budget_Year

@{
    ViewBag.Title = "Budget_Year_Data";
}


<style type="text/css">

    .form-rounded {
        border-radius: 3rem;
    }
</style>


<style type="text/css">
    .button_cls {
        background: #1AAB8A;
        color: #fff;
        border: none;
        position: relative;
        height: 25px;
        font-size: 1em;
        padding: 0 2em;
        cursor: pointer;
        transition: 800ms ease all;
        outline: none;
    }

        .button_cls:hover {
            background: #fff;
            color: #1AAB8A;
        }

        .button_cls:before, button:after {
            content: '';
            position: absolute;
            top: 0;
            right: 0;
            height: 2px;
            width: 0;
            background: #1AAB8A;
            transition: 400ms ease all;
        }

        .button_cls:after {
            right: inherit;
            top: inherit;
            left: 0;
            bottom: 0;
        }

        .button_cls:hover:before, button:hover:after {
            width: 100%;
            transition: 800ms ease all;
        }
</style>


<link href="~/CSS/SearchBox/searchbox.css" rel="stylesheet" />
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
<link rel='stylesheet' href='https://fonts.googleapis.com/css?family=Nunito'>


<div style=" margin-top: -100px;  text-align: center; height: 50px; align-content: center; width: 100% " class="card w-100 shadow p-3 mb-5 bg-white rounded">

    <p style="font-size:large; padding-top:-5px; font-weight:400;">List of Budget Years</p>

</div>

<div style=" align-content:center; width:100%" class="card w-100 shadow p-3 mb-5 bg-white rounded">
    <table class=" table-hover table-striped shadow " style="width:100%">
        <tr>
            <td width="75%">

                <div class="col-rt-3 equal-height">
                    <div class="sb-example-3">
                        <!-- partial:index.partial.html -->
                        <div class="search__container">

                            <input class="search__input" type="text" placeholder="Search">
                        </div>
                    </div>
                </div>


            </td>
            <td align="right" width="25%">
                <h4>
                    @Html.ActionLink("Back", "Admin_Dashboard", "Admin_Dashboard")

                </h4>
            </td>
        </tr>
        <tr>
            <td colspan="2">
                </br>
            </td>
        </tr>
        <tr>
            <td colspan="2">

                @using (Html.BeginForm("Budget_Year_Insert", "Budget_Year", FormMethod.Post))
                {


                    <table style="width:100%">
                        <tr>
                            <th>
                                Budget Year
                            </th>
                            <th>
                                Active Budget Year
                            </th>
                            <th> Action </th>
                        </tr>

                        @foreach (var item in Model.List_Bud_Year)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Bud_Year)
                                </td>
                                <td>
                                    @Html.CheckBoxFor(modelItem => item.default_Bud)
                                </td>
                                <td>

                                    @Html.ActionLink("Delete", "Budget_Year_Update", new { Bud_Id = item.Bud_Id })
                                </td>
                            </tr>
                        }
                        <tr>
                            <td>
                                @Html.TextBoxFor(x => x.Bud_Year, new { @style = "width:90%;", @class = "form-rounded" })
                            </td>
                            <td>
                                @Html.CheckBoxFor(x => x.default_Bud)
                            </td>
                            <td>

                                <button class="button_cls form-rounded">Submit</button>

                            </td>
                        </tr>

                    </table>

                }

            </td>

        </tr>

    </table>
</div>

<script type="text/javascript">
    function ShowSuccessMsg() {
        toastr.success("Successfully Added.");
    };
    function ShowFailure(Msg) {
        toastr.error("Error:" + Msg);
    };
</script>
