<style type="text/css">

    .form-rounded {
        border-radius: 3rem;
    }
</style>

<style type="text/css">

    @@import "compass/css3";

    input[type=text], textarea {
        @@include transition(all 0.30s ease-in-out);
        outline: none;
        padding: 3px 0px 3px 3px;
        margin: 5px 1px 3px 0px;
        border: 1px solid #DDDDDD;
    }

        input[type=text]:focus, textarea:focus {
            @@include box-shadow(0 0 5px rgba(81, 203, 238, 1));
            padding: 3px 0px 3px 3px;
            margin: 5px 1px 3px 0px;
            border: 1px solid rgba(81, 203, 238, 1);
        }
</style>

<style type="text/css">
    .button_cls {
        background: #1AAB8A;
        color: #fff;
        border: none;
        position: relative;
        height: 25px;
        font-size: 1em;
        padding: 0 2em;
        cursor: pointer;
        transition: 800ms ease all;
        outline: none;
    }

        .button_cls:hover {
            background: #fff;
            color: #1AAB8A;
        }

        .button_cls:before, button:after {
            content: '';
            position: absolute;
            top: 0;
            right: 0;
            height: 2px;
            width: 0;
            background: #1AAB8A;
            transition: 400ms ease all;
        }

        .button_cls:after {
            right: inherit;
            top: inherit;
            left: 0;
            bottom: 0;
        }

        .button_cls:hover:before, button:hover:after {
            width: 100%;
            transition: 800ms ease all;
        }
</style>


<div style="   text-align: center; height: 50px; align-content: center; width: 100% " class="h-10 w-100 shadow p-1 mb-1 bg-white rounded">

    <p style="font-size:large; font-weight:bold;">Edit User</p>

</div>

<div style=" align-content:center; width:100%" class="h-10 w-100 shadow p-1 mb-1 bg-white rounded">


    @using (Html.BeginForm("Update_User_Info", "User_Info", FormMethod.Post))
    {


        <table class=" table-hover table-striped shadow " style="width:100%">


            <tr>
                <td style="width:25%; ">
                    First Name
                </td>
                <td style="width:25%;">
                    @Html.TextBoxFor(x => x.User_First_Name, new { @class = " form-rounded", @style = " width :90%; " })
                </td>

                <td style="width:25%; height:50px;">
                    Last Name
                </td>
                <td style="width:25%;">
                    @Html.TextBoxFor(x => x.User_Last_Name, new { @class = " form-rounded", @style = " width :90%; " })
                </td>

            </tr>


            <tr>
                <td style="width:25%; height:50px;">
                    Employee Code
                    @Html.HiddenFor(x => x.User_ID, new { @class = " form-rounded", @style = " width :90%; " })
                </td>
                <td style="width:25%;">
                    @Html.TextBoxFor(x => x.Emp_Code, new { @class = " form-rounded", @style = " width :90%; " })
                </td>

                <td style="width:25%; height:50px;">
                    Email Id / User Id
                </td>
                <td style="width:25%;">
                    @Html.TextBoxFor(x => x.User_Email, new { @class = " form-rounded", @style = " width :90%; " })
                </td>

            </tr>
            <tr>
                <td style="width:25%;">
                    Password
                </td>
                <td style="width:25%;">
                    @Html.TextBoxFor(x => x.User_Password, new { @class = " form-rounded", @style = " width :90%; " })
                </td>
                <td style="width:25%; height:50px;">
                    Status
                </td>
                <td style="width:25%;">
                    @Html.CheckBoxFor(x => x.Active)
                </td>
            </tr>


            <tr>
                <td style="width:25%;">
                    Remarks
                </td>
                <td style="width:75%; " colspan="3">
                    @Html.TextAreaFor(x => x.Remarks, new { @class = " form-rounded", @style = " width :96%; " })
                </td>
            </tr>

            <tr>
                <td style="width:100%; height:10px;" colspan="4">
                </td>
            </tr>
            <tr style=" height: 50px; ">
                <td align="left" style="width:25%; "></td>

                <td style="width: 25%; padding-top: 10px; padding-bottom: 5px" align="center">
                    <button class="button_cls form-rounded">Submit</button>

                </td>

                <td style="width: 25%; padding-top: 10px; padding-bottom: 5px" align="center">
                    @Html.ActionLink("Back", "User_Info_Details", "User_Info", null, new { @class = "button_cls form-rounded", })
                </td>

                <td align="left" style="width:25%;"></td>
            </tr>
        </table>

    }
</div>


