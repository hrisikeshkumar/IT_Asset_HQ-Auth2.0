            </tr>

            <tr>
                <td style="width:25%; height:50px;">
                    Purchase Order 
                </td>
                <td style="width:75%;" colspan="3">

                    @Html.HiddenFor(x => x.PO_Id)
                    @Html.TextBoxFor(x => x.PO_No, new { @class = " form-rounded",  @style = " width :95%; " })

                </td>
            </tr>

            <tr>
                <td style="width:25%;">
                    Asset Serial No.
                </td>
                <td style="width:25%;">
                    @Html.TextBoxFor(x => x.Item_serial_No, new { @class = " form-rounded", @style = " width :80%; " })
                </td>

                <td style="width:25%;">
                    Date of Purchase
                </td>
                <td style="width:25%;">
                    @Html.TextBoxFor(x => x.Proc_date, "{0:dd/MM/yyyy}", new { @class = "dateclass form-rounded date-format", @style = " width :80%; " })
                </td>

            </tr>
            <tr>
                <td style="width: 25%; height: 50px;">
                    Warrenty End Date
                </td>
                <td style="width:25%;">
                    @Html.TextBoxFor(x => x.Warnt_end_dt, "{0:dd/MM/yyyy}", new { @class = "dateclass form-rounded date-format", @style = " width :80%; " })
                </td>

                <td style="width:25%;">
                    Price
                </td>
                <td style="width:25%;">
                    @Html.TextBoxFor(x => x.price, new { @class = " form-rounded", @style = " width :80%; " })
                </td>
            </tr>

            <tr>
                <td style="width:25%;">
                    Remarks
                </td>
                <td style="width:75%; " colspan="3">
                    @Html.TextAreaFor(x => x.Remarks, new { @class = " form-rounded", @style = " width :80%; " })
                </td>
            </tr>

            <tr>
                <td style="width:100%; height:10px;" colspan="4">
                </td>
            </tr>
            <tr style=" height: 50px; ">
                <td align="left" style="width:25%; "></td>

                <td style="width: 25%; padding-top: 10px; padding-bottom: 5px" align="center">
                    <button class="button_cls form-rounded">Submit</button>

                </td>

                <td style="width: 25%; padding-top: 10px; padding-bottom: 5px" align="center">
                    @Html.ActionLink("Back", "DataCard_Details", "DataCard", null, new { @class = "button_cls form-rounded", })
                </td>

                <td align="left" style="width:25%;"></td>
            </tr>
        </table>

    }
</div>


