<div style=" align-content:center; width:100%" class="h-10 w-100 shadow p-1 mb-1 bg-white rounded">


    @using (Html.BeginForm("DataCard_CreateItem_Post", "DataCard", FormMethod.Post))
    {

        <table class=" table-hover table-striped shadow " style="width:100%">

            <tr>
                <td style="width:25%; height:50px;">
                    Asset Make
                </td>
                <td style="width:25%;">

                    @Html.DropDownListFor(x => x.Item_Make_id, Model.Item_Make_List, new { @class = " form-rounded", @style = " width :90%; " })
                </td>
