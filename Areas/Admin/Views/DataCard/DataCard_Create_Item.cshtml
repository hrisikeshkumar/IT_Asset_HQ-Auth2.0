                    Asset Model
                </td>
                <td style="width:25%;">

                    @Html.DropDownListFor(x => x.Item_Model_id, new SelectList(string.Empty, "Value", "Text"), "Please select a Type", new { @class = " form-rounded", @style = " width :90%; " })

