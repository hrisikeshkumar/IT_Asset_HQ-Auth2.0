@* -----------------------------------------------------  PO File Download  ------------------------------------------------- *@

<script type="text/javascript">

    $(document).on("click", ".cssFiledownload", function (event) {

        var fileID = $(this).attr('id');
      
        $.ajax({
            type: "POST",
            url: "@Url.Action("Download", "Purchase_Order")",
            data: { fileName: fileID  },
            success: function (r) {
                //Convert Base64 string to Byte Array.
                var bytes = Base64ToBytes(r);

                //Convert Byte Array to BLOB.
                var blob = new Blob([bytes], { type: "application/octetstream" });

                //Check the Browser type and download the File.
                var isIE = false || !!document.documentMode;
                if (isIE) {
                    window.navigator.msSaveBlob(blob, fileID);
                }
                else {
                    var url = window.URL || window.webkitURL;
                    link = url.createObjectURL(blob);
                    var a = $("<a />");
                    a.attr("download", fileID );
                    a.attr("href", link);
                    $("body").append(a);
                    a[0].click();
                    $("body").remove(a);
                }
            }
        });

      event.preventDefault();
    });

    function Base64ToBytes(base64) {
        var s = window.atob(base64);
        var bytes = new Uint8Array(s.length);
        for (var i = 0; i < s.length; i++) {
            bytes[i] = s.charCodeAt(i);
        }
        return bytes;
    };

</script>

@*------------------------------------ Upload PO File --------------------------------------------------------------*@

<script type="text/javascript">
    
$(function () {

        $('#btnFileUpload').click(function (event) {

            event.preventDefault();

            if (window.FormData !== undefined) {

                var fileUpload = $("#FileUpload_Id").get(0);
                var files = fileUpload.files;
                var filename = files[0].name;
                var fileId = $("#PO_No").val() +"-"+ $("#PO_Date").val()+ ".pdf";

                // Create FormData object
                var fileData = new FormData();

                // Looping over all files and add it to FormData object
                for (var i = 0; i < files.length; i++) {
                    fileData.append(files[i].name, files[i]);
                }

                fileData.append('PO_Id', $('#PO_id').val());
                fileData.append('PO_File_Id', fileId);
                fileData.append('PO_File_Name', filename);

                $.ajax({
                    type: "POST",
                    url: "@Url.Action("Upload_POFile", "Purchase_Order")",                   
                    data: fileData,
                    contentType: false, // Not to set any content header
                    processData: false, // Not to process data
                    cache: false,
                    success: function (response) {
                        if (response != null) 
                        {
                            if(response.status >0)
                            {
                                $("#tbl_File_PO TBODY TR").remove();
                                var markup ="<tr> <td style='width:75%; font-weight:bold'>File Name</td> <td style='width: 25%; font-weight: bold'> Download</td></tr>";
                                markup= markup+" <tr>  <td>  <p> "+ filename +" </p> <input type='hidden' id='PO_File_Id' name='PO_File_Id' value="+ fileId +"> </td> ";
                                markup= markup+"<td> <input type='submit' value='Download' class='cssFiledownload btn_download' id='"+ fileId +"' /> </td></tr> ";
                                
                                $("#tbl_File_PO").append(markup);

                                alert("File Uploaded Successfully"); 
                            }
                            else
                            {
                                alert("File not Uploaded"); 
                            }
                        }
                    },
                    error: function (err) {
                        alert(err.statusText);
                    }
                });
            }
            event.preventDefault();
        });
    });

</script>



