@* //----------------------------------------------------- Approval Details ----------------------------------------------------------------- *@


<script type="text/javascript">
    $(document).ready(function () {
        let rowIndex = 0;

        $("#btn_Approval_Add").click(function (event) {
            event.preventDefault();

            const proposalId = $('#Proposal_Id').val();
            const proposalDetails = $('#Approval_Details').val();

            const newRow = `
                <tr>
                    <td style="width:0%; display:none;">
                        <input type="hidden"   name="ApprovalList[${rowIndex}].Proposal_ID" value="${proposalId}" />
                        ${proposalId}
                    </td>
                    <td style="width:90%;">
                        <input type="text" readonly style="width:95%;" name="ApprovalList[${rowIndex}].Proposal_Details" value="${proposalDetails}" />
                    </td>
                    <td>
                        <button type="button" class="btn_delete btn_deleterow">Delete</button>
                    </td>
                </tr>
            `;

            $('#tbl_ApprovalList tbody').append(newRow);
            rowIndex++;

            // Clear input fields
            $('#Proposal_Id').val('');
            $('#Approval_Details').val('');
        });
    });


    $(document).on('click', '.btn_deleterow', function () {
        $(this).closest('tr').remove();
        reindexApprovalRows(); // Recalculate indices after deletion
    });


    function reindexApprovalRows() {
        $('#tbl_ApprovalList tbody tr').each(function (index) {
            $(this).find('input[name^="ApprovalList"]').each(function () {
                const name = $(this).attr('name');
                const newName = name.replace(/\[\d+\]/, `[${index}]`);
                $(this).attr('name', newName);
            });
        });
    }

</script>



