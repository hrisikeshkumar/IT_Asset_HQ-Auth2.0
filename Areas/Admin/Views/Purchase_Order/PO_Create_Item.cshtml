
@model IT_Hardware.Areas.Admin.Models.Mod_POrder


@{
    ViewBag.Title = "Index";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}


<link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
@*<script src="https://code.jquery.com/jquery-1.12.4.js"></script>*@
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>


<script src="~/js/commonjs.js"></script>
<link href="~/css/commoncssclass.css" rel="stylesheet" />


<div style="   text-align: center; height: 50px; align-content: center; width: 100% " class="h-10 w-100 shadow p-1 mb-1 bg-white rounded">

    <p style="font-size:large; font-weight:bold;">Enter New Purchase Order</p>

</div>

<div style=" align-content:center; width:100%" class="h-10 w-100 shadow p-1 mb-1 bg-white rounded">


    @using (Html.BeginForm("PO_Create_Post", "Purchase_Order", FormMethod.Post, new { encType = "multipart/form-data" }))
    {
        <table class=" table-hover table-striped shadow " style="width:100%">
            <tr>
                <td style="width:25%; ">
                    P.O. No.
                </td>
                <td style="width:25%;">
                    @Html.TextBoxFor(x => x.PO_No, new { @class = " form-rounded", @style = " width :90%; " })
                </td>
                <td style="width:25%;">
                    P.O. Date
                </td>
                <td style="width:25%;">
                    @Html.TextBoxFor(x => x.PO_Date, "{0:dd/MM/yyyy}", new { @class = "dateclass form-rounded", @style = " width :90%; " })
                </td>
            </tr>
            <tr>
                <td style="width:25%; ">
                    Subject
                </td>
                <td style="width:75%;" colspan="3">
                    @Html.TextBoxFor(x => x.PO_Subject, new { @class = " form-rounded", @style = " width :90%; " })
                </td>
              
            </tr>
            <tr>
                <td style="width:25%; height:50px;">
                    P.O. Start Date
                </td>
                <td style="width:25%;">
                    @Html.TextBoxFor(x => x.PO_ST_Date, "{0:dd/MM/yyyy}", new { @class = "dateclass form-rounded", @style = " width :90%; " })
                </td>
                <td style="width:25%; height:50px;">
                    P.O Expiary Date
                </td>
                <td style="width:25%;">
                    @Html.TextBoxFor(x => x.PO_End_Date, "{0:dd/MM/yyyy}", new { @class = "dateclass form-rounded", @style = " width :90%; " })
                </td>
            </tr>
            <tr>
                <td style="width:25%; height:50px;">
                    Vendor Name
                </td>
                <td style="width:75%;" colspan="3">
                    @Html.DropDownListFor(x => x.Vendor_id, Model.Vendor_List, new { @class = " form-rounded", @style = " width :70%; " })
                </td>         
            </tr>
            <tr>
                <td style="width:25%; height:50px;">
                    Approval Details @Html.HiddenFor(x=>x.Proposal_Id)
                </td>
                <td style="width:75%;" colspan="3">
                    @Html.TextAreaFor(x => x.Approval_Details, new { @rows = "2", @style = " width :96%; " })
                </td>
            </tr>
            <tr>
                <td style="width: 25%; height: 50px;">
                    Upload Related Files
                </td>
                <td style="width:75%;" colspan="3">
                    <input id="File_PO" type="file"
                           name="File_PO" />  Only PDF files are accepted.

                </td>
            </tr>
            <tr>
                <td style="width:25%; height:50px;">
                    SLA Required
                </td>
                <td style="width:25%;">
                    @Html.CheckBoxFor(model => model.SLA_Required, new { @class = " form-rounded", @style = " width :60%; " })
                </td>
                <td style="width:25%;">
                    P.O. Value (Yearly)
                </td>
                <td style="width:25%;">
                    @Html.TextBoxFor(x => x.PO_Value, new { @class = " form-rounded", @style = " width :90%; " })
                </td>
            </tr>
            <tr>
                <td style="width:25%;">
                    Remarks
                </td>
                <td style="width:75%; " colspan="3">
                    @Html.TextAreaFor(x => x.Remarks, new { @rows = "2", @style = " width :96%; " })
                </td>
            </tr>
            <tr>
                <td style="width:100%; height:10px;" colspan="4">
                </td>
            </tr>
            <tr style=" height: 50px; ">
                <td align="left" style="width:25%; "></td>

                <td style="width: 25%; padding-top: 10px; padding-bottom: 5px" align="center">
                    <button class="button_cls form-rounded">Submit</button>
                </td>
                <td style="width: 25%; padding-top: 10px; padding-bottom: 5px" align="center">
                    @Html.ActionLink("Back", "PO_Details", "Purchase_Order", null, new { @class = "button_cls form-rounded", })
                </td>
                <td align="left" style="width:25%;"></td>
            </tr>
        </table>

    }


</div>


@if (TempData["Message"] != null && TempData["Message"] != "" && TempData["Message"] != string.Empty)
{
    <script type="text/javascript">
        window.onload = function () {
            alert("@TempData["Message"]");
        };
    </script>

}


<script type="text/javascript">
    $(function () {

        $('#Budget_Year').change(function () {
            $('#Budget_Head_Id').empty();

            $.ajax({
                type: "POST",
                url:  "@Url.Action("Budget_List", "Budget_Uses")",
                datatype: "Json",
                data: { Yearcode: $('#Budget_Year').val() },
                success: function (data) {
                    $.each(data, function (index, value) {
                        $('#Budget_Head_Id').append('<option value="' + value.value + '">' + value.text + '</option>');
                    });
                }

            });

        });
    });


    $(function () {

        $('#Budget_Head_Id').change(function () {

            $.ajax({
                type: "POST",
                url:  "@Url.Action("Prev_Budget_info", "Budget_Uses")",
                dataType: "json",
                data: { Yearcode: $('#Budget_Year').val(), Bud_Head_Id: $('#Budget_Head_Id').val() },
                success: function (response) {
                    if (response != null) {
                        $('#Total_Approved_Budget').val(response.Total_Approved_Budget);
                        $('#Amount_Utilized_Before').val(response.Amount_Utilized_Before);
                        $('#Balance_Available').val(response.Balance_Available);
                    } else {
                        alert("Something went wrong");
                    }
                },
                failure: function (response) {
                    alert(response.responseText);
                },
                error: function (response) {
                    alert(response.responseText);
                }
            });

        });
    });


    $(function () {
        $('#Budget_Amount').focusout(function () {
            $('#Remaning_Balance').val($('#Balance_Available').val() - $('#Budget_Amount').val());
        });
    });

</script>



<link href="https://ajax.aspnetcdn.com/ajax/jquery.ui/1.9.2/themes/blitzer/jquery-ui.css" rel="Stylesheet" type="text/css" />

<script type="text/javascript">
    $('#Approval_Details').autocomplete({
        source: function (request, response) {
            $.ajax({
                url: "@Url.Action("AutoComplete", "Purchase_Order")",
                data: {SL_No: request.term},
                dataType: "json",
                type: "POST",
                // contentType: "application/json; charset=utf-8",
                success: function (data) {
                    response($.map(data, function (item) {
                        return   item.item_Id + '--' + item.item_SL_Number ;

                    }))
                },
                failure: function (response) {
                    alert(response.responseText);
                },
                error: function (xmlHttpRequest, textStatus, errorThrown) {
                    console.log('some error occured', textStatus, errorThrown);
                }
            });
        },
        minLength: 1,
        select: function (event, ui) {
            
            $('#Proposal_Id').val(ui.item.label.split('--')[0]);
            $('#Approval_Details').val(ui.item.value.split('--')[1]);

            return false;
        }
    });
</script>





