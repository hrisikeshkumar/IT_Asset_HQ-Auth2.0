<script type="text/javascript">
    $(function () {

        $('#Fin_Year').change(function () {
            $('#Budget_Id').empty();

            $.ajax({
                type: "POST",
                url: "/Invoice/Bud_Head_List",
                datatype: "Json",
                data: { Fin_Year: $('#Fin_Year').val() },
                success: function (data) {
                    $.each(data, function (index, value) {
                        $('#Budget_Id').append('<option value="' + value.Value + '">' + value.Text + '</option>');
                    });
                }

            });

        });
    });
</script>





